{
  "name": "@exsui/ui",
  "version": "0.0.1",
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "source": "src",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:css": "tailwindcss -i ./styles.css -o ./dist/index.css",
    "dev": "tsup --watch",
    "docs": "typedoc --out docs ./src/index.ts",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@exsui/utils": "workspace:*",
    "@floating-ui/react": "^0.26.9",
    "@headlessui/react": "^1.7.18",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.20",
    "react-icons": "^5.0.1",
    "tailwind-merge": "^2.2.2"
  },
  "devDependencies": {
    "@exsui/eslint-config": "workspace:*",
    "@exsui/typescript-config": "workspace:*",
    "@microsoft/api-extractor": "^7.43.0",
    "@swc/core": "^1.4.8",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@types/react-transition-group": "^4.4.10",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "deepmerge": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typedoc": "^0.25.12",
    "typedoc-plugin-markdown": "4.0.0-next.54",
    "typedoc-plugin-mdn-links": "^3.1.18",
    "typedoc-plugin-missing-exports": "^2.2.0",
    "typescript": "^5.4.3"
  }
}
